{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@ds/ui": [
                "packages/ui/src"
            ],
            "@/*": [
                "apps/web/*"
            ],
            "@ds/tokens": [
                "packages/tokens/src"
            ]
        }
    }
}